@model ITIL.Services.Contract.CreateDepartmentDto
@{
    var errorMessage = TempData["ErrorMessage"];
}
@if (!string.IsNullOrEmpty(errorMessage?.ToString()))
{
    <div class="alert alert-danger">@errorMessage</div>
}
<form asp-action="CreateDepartment" method="post">
    <div>
        <label asp-for="Title">نام دپارتمان</label>
        <input asp-for="Title" asp-validation-for="Title" class="form-control">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <label asp-for="CityId">شهر</label>
            @Html.DropDownListFor(model => model.CityId, (IEnumerable<SelectListItem>)ViewBag.Cities, "Please Select",new {@class="form-select"})
            <span asp-validation-for="CityId"></span>
        </div>
        <div class="col-6">
            <label asp-for="DepartmentType">نوع واحد</label>
            @Html.DropDownListFor(model => model.DepartmentType, Html.GetEnumSelectList<ITIL.Shared.DepartmentType>(), "Please Select", new { @class = "form-select" })
            <span asp-validation-for="DepartmentType"></span>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-12">
        <button type="submit">ایجاد دپارتمان</button>
        </div>
    </div>
    
</form>  